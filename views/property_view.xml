<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <!-- define a basic tree view -->
        <record id="estate_property_tree_view" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type_id"/>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                    <field name="expected_price"/>
                    <field name="best_offer"/>
                    <field name="selling_price"/>
                </tree>
            </field>
        </record>


        <!-- define a basic form view -->
        <record id="estate_property_form_view" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <!-- just like a container -->
                <form>
                    <sheet>
                        <group>
                            <!-- this is the title -->
                            <field name="name"/>

                            <!-- the relationship between the tag and the property is bound by the tag_ids -->
                            <field name="tag_ids" widget="many2many_tags"/>

                            <!-- with two sections -->
                            <group>
                                <field name="postcode"/>
                                <field name="type_id"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_offer"/>
                                <field name="selling_price"/>
                            </group>
                        </group>
                        <notebook>
                                <page string="Description">
                                    <group>
                                        <field name="description"/>
                                        <field name="bedrooms"/>
                                        <field name="living_area"/>
                                        <field name="facades"/>
                                        <field name="garage"/>
                                        <field name="garden"/>
                                        <field name="garden_area"/>
                                        <field name="garden_orientation"/>
                                        <field name="total_area"/>
                                    </group>
                                </page>
                                <page string="Offers">
                                    <!-- a one to many field will always appear in the form of a tree -->
                                    <field name="offer_ids">
                                        <tree editable="bottom">
                                            <field name="price"/>
                                            <field name="partner_id"/>
                                            <field name="creation_date"/>
                                            <field name="status"/>
                                            <field name="validity"/>
                                            <field name="deadline"/>
                                        </tree>
                                    </field>
                                </page>
                            <page string="Other Info">
                                <group>
                                    <field name="sales_id"/>
                                    <field name="buyer_id"/>
                                    <field name="phone"/>
                                </group>
                            </page>
                            </notebook>
                    </sheet>
                </form>
            </field>
        </record>



        <!-- we create a record on the act_window model -->
        <!-- ir.actions.act_window is a model too, just like the one we made -->
        <record id="action_property" model="ir.actions.act_window">
            <!-- and 'name' is a field on the act_window -->
            <field name="name">Property</field>
            <!-- res_model refers to the model we've defined here, so estate.property -->
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
            <!-- point it towards our custom tree view -->
            <field name="view_id" ref="estate_property_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Property to Advertise
                </p>
            </field>
        </record>
    </data>
</odoo>