<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <!-- define a basic tree view -->
        <record id="estate_property_tree_view" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="postcode"/>
                    <field name="date_availability"/>
                    <field name="expected_price"/>
                    <field name="best_offer"/>
                    <field name="selling_price"/>
                </tree>
            </field>
        </record>


        <!-- define a basic form view -->
        <record id="estate_property_form_view" model="ir.ui.view">
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <!-- just like a container -->
                <form>
                    <sheet>
                        <group>
                            <!-- this is the title -->
                            <field name="name"/>

                            <!-- with two sections -->
                            <group>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                                <field name="best_offer"/>
                                <field name="selling_price"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>



        <!-- we create a record on the act_window model -->
        <!-- ir.actions.act_window is a model too, just like the one we made -->
        <record id="action_property" model="ir.actions.act_window">
            <!-- and 'name' is a field on the act_window -->
            <field name="name">Property</field>
            <!-- res_model refers to the model we've defined here, so estate.property -->
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
            <!-- point it towards our custom tree view -->
            <field name="view_id" ref="estate_property_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Property to Advertise
                </p>
            </field>
        </record>
    </data>
</odoo>